                            <p style="color:white; display: inline;">{{user.name}}</p>
                        </a>
                        {{#if mePage}}
                        <a class="nav-item nav-link text-center" href="../auth/logout" style="padding-top: 0;">Đăng xuất</a>
                        {{else}}
                        {{#if detailPage}}
                        <a class="nav-item nav-link text-center" href="../auth/logout" style="padding-top: 0;">Đăng xuất</a>

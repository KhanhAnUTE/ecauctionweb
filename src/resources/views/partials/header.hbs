                        {{else}}
                        <a class="nav-item nav-link" href="auth/login">
                        {{/if}}
                        {{/if}}
                        
                            <i class="fa fa-user-circle-o" aria-hidden="true"></i>
                            <p style="color:white; display: inline;">Đăng nhập</p>

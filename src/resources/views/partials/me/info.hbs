<!-- Shop Product Start -->
<div class="col-lg-9 col-md-12">
    <div class="row pb-3 px-5 pb-5 bg-white">
        <form name="sentMessage" class="w-2/4" action="" method="POST" id="info-form">
            <div class="row">
                <div class="col-lg-4">
                    <div class="control-group mb-3 pt-5">
                        <label for="name">Tên</label>
                        <input type="text" class="form-control" name="name" placeholder="Nhập tên bạn" value="{{me.name}}" onclick="clearMessage()"/>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group mb-3">
                        <label for="phone_number">Số điện thoại</label>
                        <input type="text" class="form-control" name="phone_number" placeholder="Nhập số điện thoại" value="{{me.phone_number}}" onclick="clearMessage()"/>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group mb-3">
                        <label for="name">Email</label>
                        <input type="email" class="form-control" name="email" placeholder="Email" value="{{me.email}}" disabled/>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="control-group mb-3 pt-5">
                        <label for="city">Tỉnh/Thành Phố</label>
                        <input type="text" class="form-control" name="city" placeholder="Tỉnh/Thành Phố"
                            value="{{me.city}}" onclick="clearMessage()"/>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group mb-3">
                        <label for="district">Quận/Huyện</label>
                        <input type="text" class="form-control" name="district" placeholder="Quận/Huyện"
                            value="{{me.district}}" onclick="clearMessage()"/>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group mb-3">
                        <label for="ward">Xã/Phường</label>
                        <input type="text" class="form-control" name="ward" placeholder="Xã/Phường" value="{{me.ward}}" onclick="clearMessage()"/>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="control-group mb-3 pt-5">
                        <label for="street">Đường</label>
                        <input type="text" class="form-control" name="street" placeholder="Đường"
                            value="{{me.street}}" onclick="clearMessage()"/>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group mb-3">
                        <label for="gender">Giới tính</label>
                        <input type="text" class="form-control" name="gender" placeholder="Giới tính"
                            value="{{me.gender}}" onclick="clearMessage()"/>
                        <p class="help-block text-danger"></p>
                    </div>
                    <div class="control-group mb-3">
                        <label for="avatar">Link Ảnh đại diện</label>
                        <input type="text" class="form-control" name="avatar" placeholder="Link Ảnh đại diện" value="{{me.avatar}}" onclick="clearMessage()"/>
                        <p class="help-block text-danger"></p>
                    </div>
                </div>
            </div>
            
            <div id="message-info" class=""></div>

            <button type="button" class="change-pass btn mb-1 mt-3 px-4">Thay đổi mật khẩu</button>

            <button class="btn btn-primary py-2 px-4" id="btn-save-changes" type="submit" style="color: white !important;">Lưu thay đổi</button>
        </form>
    </div>
</div>
<!-- Shop Product End -->